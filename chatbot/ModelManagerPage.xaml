<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:chatbot.ViewModels"
             x:Class="chatbot.ModelManagerPage"
             BackgroundColor="#0C111B"
             Title="Gerenciador de Modelos">

    <ContentPage.BindingContext>
        <vm:ModelManagerViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">
        <!-- Hero -->
        <Grid Grid.Row="0" Padding="20,22" ColumnDefinitions="*,Auto">
            <VerticalStackLayout Spacing="6">
                <Label Text="Gerenciador de Modelos"
                       FontSize="26"
                       TextColor="#E8EDF4"
                       FontAttributes="Bold" />
                <Label Text="Baixa modelos GGUF prontos para usar com LLamaSharp"
                       FontSize="13"
                       TextColor="#9AA4B2" />
            </VerticalStackLayout>
            <Button Text="Atualizar"
                    Grid.Column="1"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontAttributes="Bold"
                    Padding="16,10"
                    CornerRadius="12"
                    Clicked="OnLoadClicked" />
        </Grid>

        <!-- Lista -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Models}"
                        Margin="16,0,16,16">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="#121826"
                           BorderColor="#1F2937"
                           CornerRadius="16"
                           Padding="14"
                           Margin="0,8">
                        <Grid RowDefinitions="Auto,Auto,Auto"
                              ColumnDefinitions="*,Auto"
                              RowSpacing="8">
                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Text="{Binding Name}"
                                   TextColor="#F1F5F9"
                                   FontSize="18"
                                   FontAttributes="Bold" />

                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   Text="{Binding Description}"
                                   TextColor="#94A3B8"
                                   FontSize="13" />

                            <ProgressBar Grid.Row="2"
                                         Grid.Column="0"
                                         Progress="{Binding Progress}"
                                         HeightRequest="6" />

                            <Button Grid.Row="0"
                                    Grid.RowSpan="3"
                                    Grid.Column="1"
                                    Text="Download"
                                    BackgroundColor="#16A34A"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    Padding="14,10"
                                    CornerRadius="12"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ModelManagerViewModel}}, Path=DownloadCommand}"
                                    CommandParameter="{Binding .}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
